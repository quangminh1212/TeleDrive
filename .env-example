# TeleDrive Environment Configuration
# Copy this file to .env and fill in your values

# Application Settings
DEBUG=True
SECRET_KEY=your_secret_key_here
PORT=3000
HOST=0.0.0.0

# Telegram API Credentials (get from https://my.telegram.org/apps)
TELEGRAM_API_ID=your_api_id
TELEGRAM_API_HASH=your_api_hash
TELEGRAM_PHONE=your_phone_number

# Database Settings
DATABASE_URL=sqlite:///instance/teledrive.db

# Scanning Settings
MAX_MESSAGES=1000
BATCH_SIZE=50
SCAN_DOCUMENTS=True
SCAN_PHOTOS=True
SCAN_VIDEOS=True
SCAN_AUDIO=True

# Output Settings
OUTPUT_CSV=True
OUTPUT_JSON=True
OUTPUT_EXCEL=True
OUTPUT_DIR=output

# Session Settings
SESSION_DIR=instance
DEFAULT_CHANNEL=your_default_channel

# Security Settings
ENABLE_OTP=False
OTP_SECRET=your_otp_secret
PASSWORD_SALT=your_password_salt

# Logging
LOG_LEVEL=INFO
LOG_DIR=logs 