# TeleDrive - Environment Configuration Example
# Copy this file to .env and update the values

# Environment settings
ENVIRONMENT=development  # development or production
DEBUG=false              # Enable debug mode
BYPASS_AUTH=false        # Bypass authentication (only for development)

# Telegram API credentials (required)
# Get these from https://my.telegram.org/apps
TELEGRAM_API_ID=
TELEGRAM_API_HASH=
TELEGRAM_PHONE=

# Security settings
SECRET_KEY=              # Generate a secure key: python -c "import secrets; print(secrets.token_hex(32))"
SESSION_TIMEOUT=3600     # Session timeout in seconds (1 hour)
CSRF_ENABLED=true        # Enable CSRF protection
RATE_LIMIT_ENABLED=true  # Enable rate limiting
RATE_LIMIT_PER_MINUTE=60 # Requests per minute limit

# OTP settings
OTP_EXPIRY_MINUTES=10    # OTP expiry time in minutes
MAX_LOGIN_ATTEMPTS=5     # Maximum failed login attempts before lockout
LOCKOUT_DURATION=900     # Lockout duration in seconds (15 minutes)

# Database settings
# SQLite (default)
# DATABASE_URL=sqlite:///instance/teledrive.db
# PostgreSQL example:
# DATABASE_URL=postgresql://username:password@localhost:5432/teledrive
# MySQL example:
# DATABASE_URL=mysql+pymysql://username:password@localhost:3306/teledrive
DB_ECHO=false            # Enable SQLAlchemy query logging
DB_POOL_SIZE=10          # Connection pool size (not used with SQLite)
DB_POOL_TIMEOUT=30       # Pool timeout in seconds
DB_POOL_RECYCLE=3600     # Pool recycle time in seconds

# Redis settings (optional)
REDIS_ENABLED=false      # Enable Redis caching
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=          # Redis password if required
REDIS_MAX_CONNECTIONS=20 # Maximum Redis connections
REDIS_SOCKET_TIMEOUT=5   # Redis socket timeout in seconds

# Server settings
HOST=0.0.0.0             # Server host
PORT=3000                # Server port
WORKERS=4                # Number of worker processes (Gunicorn)
WORKER_CLASS=sync        # Worker class (sync, gevent, eventlet)
TIMEOUT=30               # Worker timeout in seconds
KEEPALIVE=2              # Keepalive timeout in seconds

# Logging settings
LOG_LEVEL=INFO           # Logging level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_FORMAT=json          # Log format (json or text)
LOG_FILE=logs/teledrive.log  # Log file path
LOG_MAX_BYTES=10485760   # Maximum log file size (10MB)
LOG_BACKUP_COUNT=5       # Number of backup log files
LOG_CONSOLE=true         # Log to console

# Scanning settings
SCAN_MAX_MESSAGES=1000   # Maximum number of messages to scan
DEFAULT_CHANNEL=me       # Default channel to scan

# Output settings
OUTPUT_DIR=output        # Output directory
DOWNLOAD_DIR=downloads   # Download directory 