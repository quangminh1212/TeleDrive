# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# General settings for all files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

# Python-specific settings
[*.py]
indent_style = space
indent_size = 4
max_line_length = 88

# Frontend files
[*.{html,css,js}]
indent_style = space
indent_size = 2

# JSON and configuration files
[*.{json,yml,yaml}]
indent_style = space
indent_size = 2

# Markdown files
[*.md]
trim_trailing_whitespace = false

# Makefile requires tabs
[Makefile]
indent_style = tab
