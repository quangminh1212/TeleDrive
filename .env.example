PORT=3000
NODE_ENV=development

# Telegram Bot token - Lấy từ @BotFather trên Telegram
# BOT_TOKEN=1234567890:ABCDEFGHIJKLMNOPQRSTUVWXYZ123456789
BOT_TOKEN=1325534418

# Telegram API credentials - Lấy từ https://my.telegram.org
# 1. Đăng nhập vào https://my.telegram.org/auth
# 2. Vào "API development tools"
# 3. Tạo ứng dụng mới (nếu chưa có)
# 4. Lấy API ID và API Hash
TELEGRAM_API_ID=21272067
TELEGRAM_API_HASH=b7690dc86952dbc9b16717b101164af3

# Telegram chat/channel ID để lưu trữ file
# Thay đổi theo ID chat/channel của bạn (phải thêm bot vào chat/channel này)
TELEGRAM_CHAT_ID=1325534418

# Cấu hình đăng nhập tự động với Telegram
USE_TELEGRAM_DESKTOP=true

# Cấu hình upload qua web client
USE_WEB_CLIENT_UPLOAD=true 