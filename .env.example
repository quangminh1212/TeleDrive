# ================================================================
# TELEGRAM FILE SCANNER - ENVIRONMENT CONFIGURATION
# ================================================================
#
# Hướng dẫn lấy API credentials:
# 1. Truy cập: https://my.telegram.org/apps
# 2. Đăng nhập bằng số điện thoại Telegram
# 3. Tạo ứng dụng mới (nếu chưa có)
# 4. Copy API ID và API Hash vào file này
#
# ================================================================

# TELEGRAM API CREDENTIALS (BẮT BUỘC)
# ================================================================
# API ID - Số nguyên từ my.telegram.org
# Ví dụ: 12345678
TELEGRAM_API_ID=your_api_id_here

# API Hash - Chuỗi 32 ký tự từ my.telegram.org
# Ví dụ: 1234567890abcdef1234567890abcdef
TELEGRAM_API_HASH=your_api_hash_here

# Số điện thoại đăng ký Telegram (BẮT BUỘC)
# Format: +[mã quốc gia][số điện thoại]
# Ví dụ cho Việt Nam: +84987654321
# Ví dụ cho Mỹ: +1234567890
TELEGRAM_PHONE=+84xxxxxxxxx

# ================================================================
# APPLICATION CONFIGURATION
# ================================================================

# Application Environment (development/production)
ENVIRONMENT=development
DEBUG=true
SECRET_KEY=your-secret-key-here-change-in-production

# Server Configuration
HOST=localhost
PORT=5000
WORKERS=4

# ================================================================
# DATABASE CONFIGURATION
# ================================================================

# Database URL - SQLite by default
DATABASE_URL=sqlite:///instance/teledrive.db
# For PostgreSQL: postgresql://user:password@localhost:5432/teledrive
# For MySQL: mysql://user:password@localhost:3306/teledrive

# ================================================================
# REDIS CONFIGURATION (Optional)
# ================================================================

# Redis URL for caching and sessions
REDIS_URL=redis://localhost:6379/0

# ================================================================
# TELEGRAM OPTIONAL SETTINGS
# ================================================================

# Tên session file (mặc định: telegram_scanner_session)
TELEGRAM_SESSION_NAME=telegram_scanner_session

# Timeout kết nối (giây, mặc định: 30)
TELEGRAM_CONNECTION_TIMEOUT=30

# Timeout request (giây, mặc định: 60)
TELEGRAM_REQUEST_TIMEOUT=60

# Số lần thử lại khi lỗi (mặc định: 3)
TELEGRAM_RETRY_ATTEMPTS=3

# Thời gian chờ giữa các lần thử lại (giây, mặc định: 5)
TELEGRAM_RETRY_DELAY=5

# ================================================================
# SECURITY CONFIGURATION
# ================================================================

# CSRF Protection
CSRF_ENABLED=true

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=60

# Session Configuration
SESSION_TIMEOUT=3600  # 1 hour in seconds
BCRYPT_LOG_ROUNDS=12

# ================================================================
# FILE UPLOAD CONFIGURATION
# ================================================================

UPLOAD_FOLDER=static/uploads
MAX_CONTENT_LENGTH=16777216  # 16MB
ALLOWED_EXTENSIONS=jpg,jpeg,png,gif,pdf,txt,doc,docx,xls,xlsx,ppt,pptx,zip,rar

# ================================================================
# LOGGING CONFIGURATION
# ================================================================

LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=logs/teledrive.log
LOG_MAX_BYTES=10485760  # 10MB
LOG_BACKUP_COUNT=5

# ================================================================
# MONITORING (Optional)
# ================================================================

# Sentry for error tracking
SENTRY_DSN=your-sentry-dsn-here

# Analytics and Metrics
ANALYTICS_ENABLED=false
METRICS_ENABLED=true

# ================================================================
# VALIDATION RULES
# ================================================================
# - TELEGRAM_API_ID: Phải là số nguyên dương
# - TELEGRAM_API_HASH: Phải là chuỗi 32 ký tự hex
# - TELEGRAM_PHONE: Phải bắt đầu bằng + và chứa 10-15 chữ số
# - Tất cả timeout/retry phải là số nguyên dương
# ================================================================
