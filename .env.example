# Cấu hình server
PORT=3000
NODE_ENV=development
SESSION_SECRET=teledrive_session_secret

# Cấu hình MongoDB
MONGODB_URI=mongodb://localhost:27017/teledrive

# Cấu hình Telegram Bot API (cho phương pháp Bot API)
TELEGRAM_BOT_TOKEN=your_bot_token
TELEGRAM_BOT_USERNAME=your_bot_username
TELEGRAM_CHAT_ID=your_chat_id

# Cấu hình TDLib (bắt buộc cho tệp lớn và hiệu suất cao)
TELEGRAM_API_ID=your_api_id
TELEGRAM_API_HASH=your_api_hash

# Cấu hình đăng nhập bằng tài khoản người dùng Telegram (thay vì Bot)
# Đặt USE_USER_AUTH=true để sử dụng tài khoản người dùng thay vì bot
USE_USER_AUTH=false
# Số điện thoại đã đăng ký với Telegram (bao gồm mã quốc gia, ví dụ: +84xxxxxxxxx)
TELEGRAM_PHONE_NUMBER=
# Mã xác thực sẽ được gửi đến ứng dụng Telegram - nhập khi được yêu cầu
# TELEGRAM_AUTH_CODE=
# Mật khẩu xác thực hai yếu tố (nếu tài khoản có bật)
# TELEGRAM_PASSWORD=

# Cấu hình tệp tin
MAX_FILE_SIZE=20971520 # 20MB mặc định
AUTO_SYNC=false
SYNC_INTERVAL=60 # Phút

# Cấu hình ghi nhật ký
LOG_LEVEL=info 