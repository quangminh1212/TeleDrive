<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <!-- Bootstrap 4 -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <!-- AdminLTE -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/admin-lte@3.2/dist/css/adminlte.min.css">
    <style>
        :root {
            --primary-color: #0088cc;
            --hover-color: #006699;
        }
        .main-sidebar {
            background-color: #343a40;
        }
        .nav-sidebar .nav-link p {
            color: #c2c7d0;
        }
        .nav-sidebar .nav-link:hover p {
            color: #fff;
        }
        .nav-sidebar .nav-link.active {
            background-color: var(--primary-color);
        }
        .nav-sidebar .nav-link.active p {
            color: #fff;
        }
        .preview-container {
            background: white;
            border-radius: 10px;
            box-shadow: 0 2px 8px rgba(0,0,0,0.1);
            padding: 1.5rem;
            margin-bottom: 1.5rem;
        }
        .preview-header {
            border-bottom: 1px solid #eee;
            padding-bottom: 1rem;
            margin-bottom: 1.5rem;
        }
        .preview-title {
            color: #333;
            font-weight: 600;
            margin-bottom: 0.5rem;
            word-break: break-word;
        }
        .preview-info {
            color: #666;
            font-size: 0.9rem;
            display: flex;
            flex-wrap: wrap;
        }
        .preview-content {
            width: 100%;
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 300px;
            max-height: 70vh;
            overflow: auto;
        }
        .btn-primary {
            background-color: var(--primary-color);
            border-color: var(--primary-color);
        }
        .btn-primary:hover {
            background-color: var(--hover-color);
            border-color: var(--hover-color);
        }
        .btn-outline-primary {
            color: var(--primary-color);
            border-color: var(--primary-color);
        }
        .btn-outline-primary:hover {
            background-color: var(--primary-color);
            border-color: var(--primary-color);
        }
        img.preview-image, video.preview-video {
            max-width: 100%;
            max-height: 70vh;
            object-fit: contain;
        }
        .text-preview {
            width: 100%;
            white-space: pre-wrap;
            font-family: monospace;
            font-size: 14px;
            padding: 1rem;
            background: #f7f7f7;
            border-radius: 5px;
            border: 1px solid #eee;
        }
        .pdf-preview {
            width: 100%;
            height: 70vh;
            border: 1px solid #ddd;
            border-radius: 5px;
        }
        .loading-overlay {
            display: none;
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(255,255,255,0.8);
            z-index: 9999;
        }
        .loading-spinner {
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
        }
        .storage-badge {
            display: inline-block;
            padding: 0.25rem 0.5rem;
            border-radius: 20px;
            font-size: 0.8rem;
        }
        .storage-local {
            background-color: #e3f2fd;
            color: #0d47a1;
        }
        .storage-telegram {
            background-color: #e8f5e9;
            color: #1b5e20;
        }
        .storage-missing {
            background-color: #ffebee;
            color: #b71c1c;
        }
    </style>
</head>
<body class="hold-transition sidebar-mini">
    <div class="wrapper">
        <!-- Navbar -->
        <nav class="main-header navbar navbar-expand navbar-white navbar-light">
            <!-- Left navbar links -->
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
                </li>
                <li class="nav-item d-none d-sm-inline-block">
                    <a href="/" class="nav-link">Trang chủ</a>
                </li>
            </ul>
        </nav>

        <!-- Main Sidebar Container -->
        <aside class="main-sidebar sidebar-dark-primary elevation-4">
            <!-- Brand Logo -->
            <a href="/" class="brand-link">
                <i class="fas fa-cloud-upload-alt brand-image img-circle elevation-3" style="opacity: .8"></i>
                <span class="brand-text font-weight-light">TeleDrive</span>
            </a>

            <!-- Sidebar -->
            <div class="sidebar">
                <!-- Sidebar user panel (optional) -->
                <div class="user-panel mt-3 pb-3 mb-3 d-flex">
                    <div class="image">
                        <img src="https://www.gravatar.com/avatar/00000000000000000000000000000000?d=mp&f=y" class="img-circle elevation-2" alt="User Image">
                    </div>
                    <div class="info">
                        <a href="#" class="d-block">Khách</a>
                    </div>
                </div>

                <!-- Sidebar Menu -->
                <nav class="mt-2">
                    <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
                        <li class="nav-header">CHÍNH</li>
                        <li class="nav-item">
                            <a href="/" class="nav-link">
                                <i class="nav-icon fas fa-tachometer-alt"></i>
                                <p>Bảng điều khiển</p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="/" class="nav-link">
                                <i class="nav-icon fas fa-folder-open"></i>
                                <p>File của tôi</p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="#" onclick="document.getElementById('fileInput').click()" class="nav-link">
                                <i class="nav-icon fas fa-upload"></i>
                                <p>Tải lên</p>
                            </a>
                        </li>
                        <li class="nav-header">THAO TÁC</li>
                        <li class="nav-item">
                            <a href="#" onclick="syncFiles()" class="nav-link">
                                <i class="nav-icon fas fa-sync"></i>
                                <p>Đồng bộ</p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="#" onclick="cleanUploads()" class="nav-link">
                                <i class="nav-icon fas fa-cloud-upload-alt"></i>
                                <p>Tải lên Telegram</p>
                            </a>
                        </li>
                    </ul>
                </nav>
                <!-- /.sidebar-menu -->
            </div>
            <!-- /.sidebar -->
        </aside>

        <!-- Content Wrapper. Contains page content -->
        <div class="content-wrapper">
            <!-- Content Header (Page header) -->
            <div class="content-header">
                <div class="container-fluid">
                    <div class="row mb-2">
                        <div class="col-sm-6">
                            <h1 class="m-0">Xem trước file</h1>
                        </div>
                    </div>
                </div>
            </div>
            <!-- /.content-header -->

            <!-- Main content -->
            <div class="content">
                <div class="container-fluid">
                    <!-- Thông báo lỗi -->
                    <% if (typeof error !== 'undefined' && error) { %>
                    <div class="alert alert-danger alert-dismissible">
                        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                        <h5><i class="icon fas fa-ban"></i> Lỗi!</h5>
                        <%= error %>
                    </div>
                    <% } %>

                    <!-- Thêm nút tải xuống trực tiếp từ Telegram -->
                    <div class="card mb-3">
                        <div class="card-header">
                            <h5>
                                <i class="fas fa-file"></i> <%= file.name %>
                                <span class="badge badge-info float-right"><%= file.formattedSize %></span>
                            </h5>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="file-preview-container text-center">
                                        <% if (file.fileType === 'image') { %>
                                            <img src="/api/files/<%= file.id %>/preview" class="img-fluid" alt="<%= file.name %>">
                                        <% } else if (file.fileType === 'video') { %>
                                            <video controls class="w-100">
                                                <source src="/api/files/<%= file.id %>/preview" type="<%= file.mimeType %>">
                                                Trình duyệt của bạn không hỗ trợ video.
                                            </video>
                                        <% } else if (file.fileType === 'audio') { %>
                                            <audio controls class="w-100">
                                                <source src="/api/files/<%= file.id %>/preview" type="<%= file.mimeType %>">
                                                Trình duyệt của bạn không hỗ trợ audio.
                                            </audio>
                                        <% } else if (file.fileType === 'pdf') { %>
                                            <iframe src="/api/files/<%= file.id %>/preview" width="100%" height="500" frameborder="0"></iframe>
                                        <% } else { %>
                                            <div class="file-icon-large mb-3">
                                                <i class="fas fa-file fa-6x text-secondary"></i>
                                                <p class="mt-3 text-muted">Không thể xem trước nội dung file này</p>
                                            </div>
                                        <% } %>
                                    </div>
                                </div>
                            </div>
                            
                            <div class="row mt-3">
                                <div class="col-md-6 mb-3">
                                    <h5>Thông tin file</h5>
                                    <table class="table table-sm">
                                        <tr>
                                            <th width="30%">Tên file:</th>
                                            <td><%= file.name %></td>
                                        </tr>
                                        <tr>
                                            <th>Kích thước:</th>
                                            <td><%= file.formattedSize %></td>
                                        </tr>
                                        <tr>
                                            <th>Ngày tải lên:</th>
                                            <td><%= file.formattedDate %></td>
                                        </tr>
                                        <tr>
                                            <th>Loại file:</th>
                                            <td><%= file.fileType %></td>
                                        </tr>
                                        <tr>
                                            <th>Trạng thái:</th>
                                            <td id="fileStatus">
                                                <span class="badge badge-<%= telegramStatus ? 'success' : 'warning' %>">
                                                    <%= telegramStatus ? 'Đã đồng bộ với Telegram' : 'Chưa đồng bộ' %>
                                                </span>
                                            </td>
                                        </tr>
                                    </table>
                                </div>
                                <div class="col-md-6 text-center">
                                    <div class="d-flex flex-column justify-content-center h-100">
                                        <div class="btn-group mb-3">
                                            <a href="/api/files/<%= file.id %>/download" class="btn btn-primary btn-lg">
                                                <i class="fas fa-download"></i> Tải xuống
                                            </a>
                                            <a href="/file/<%= file.id %>" class="btn btn-info btn-lg">
                                                <i class="fas fa-info-circle"></i> Chi tiết
                                            </a>
                                        </div>
                                        
                                        <a href="/api/files/<%= file.id %>/fix" class="btn btn-warning" id="btnFixFile">
                                            <i class="fas fa-sync"></i> Sửa lỗi file
                                        </a>
                                        
                                        <div class="mt-3" id="fixStatus"></div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Card thông tin chẩn đoán -->
                    <div class="card card-primary card-outline mt-3">
                        <div class="card-header">
                            <h3 class="card-title">Thông tin chẩn đoán</h3>
                            <div class="card-tools">
                                <button type="button" class="btn btn-tool" data-card-widget="collapse">
                                    <i class="fas fa-minus"></i>
                                </button>
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-6">
                                    <dl>
                                        <dt>ID File</dt>
                                        <dd><code><%= file.id %></code></dd>
                                        
                                        <dt>Trạng thái file</dt>
                                        <dd>
                                            <% if (file.fileStatus === 'local') { %>
                                                <span class="badge badge-info"><i class="fas fa-hdd"></i> Local</span>
                                            <% } else if (file.fileStatus === 'telegram') { %>
                                                <span class="badge badge-success"><i class="fas fa-paper-plane"></i> Telegram</span>
                                            <% } else { %>
                                                <span class="badge badge-danger"><i class="fas fa-exclamation-circle"></i> Không khả dụng</span>
                                            <% } %>
                                        </dd>
                                        
                                        <dt>Đường dẫn local</dt>
                                        <dd><%= file.localPath || 'Không có' %></dd>
                                    </dl>
                                </div>
                                <div class="col-md-6">
                                    <dl>
                                        <dt>Telegram File ID</dt>
                                        <dd><code><%= file.telegramFileId || 'Không có' %></code></dd>
                                        
                                        <dt>Bot Telegram</dt>
                                        <dd>
                                            <% if (botStatus && botStatus.active) { %>
                                                <span class="badge badge-success">Hoạt động</span>
                                            <% } else { %>
                                                <span class="badge badge-danger">Không hoạt động</span>
                                            <% } %>
                                        </dd>
                                    </dl>
                                </div>
                            </div>
                            <div class="row mt-2">
                                <div class="col-12">
                                    <a href="<%= file.resetUrl %>" class="btn btn-warning btn-sm">
                                        <i class="fas fa-sync"></i> Reset trạng thái file
                                    </a>
                                    <a href="/api/telegram-file-info/<%= file.telegramFileId %>" target="_blank" class="btn btn-info btn-sm ml-2">
                                        <i class="fas fa-info-circle"></i> Kiểm tra thông tin file Telegram
                                    </a>
                                    <a href="/api/files/<%= file.id %>/direct-download" class="btn btn-success btn-sm ml-2">
                                        <i class="fas fa-download"></i> Tải xuống trực tiếp
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Form cập nhật Telegram File ID -->
                    <div class="card card-warning card-outline mt-3">
                        <div class="card-header">
                            <h3 class="card-title">Cập nhật Telegram File ID</h3>
                            <div class="card-tools">
                                <button type="button" class="btn btn-tool" data-card-widget="collapse">
                                    <i class="fas fa-minus"></i>
                                </button>
                            </div>
                        </div>
                        <div class="card-body">
                            <p class="text-muted">Nếu bạn có Telegram File ID của file này, bạn có thể cập nhật thủ công tại đây:</p>
                            <form id="updateFileIdForm">
                                <div class="form-group">
                                    <label for="telegramFileId">Telegram File ID</label>
                                    <input type="text" class="form-control" id="telegramFileId" name="telegramFileId" 
                                           placeholder="Nhập Telegram File ID" value="<%= file.telegramFileId || '' %>">
                                    <small class="form-text text-muted">ID này có thể lấy từ Telegram khi gửi file đến bot</small>
                                </div>
                                <div class="form-group">
                                    <button type="button" id="btnUpdateFileId" class="btn btn-warning">
                                        <i class="fas fa-save"></i> Cập nhật
                                    </button>
                                    <div id="updateResult" class="mt-2"></div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
            <!-- /.content -->
        </div>
        <!-- /.content-wrapper -->

        <!-- Main Footer -->
        <footer class="main-footer">
            <div class="float-right d-none d-sm-inline">
                Version 1.0
            </div>
            <strong>Copyright &copy; 2024 <a href="/">TeleDrive</a>.</strong> All rights reserved.
        </footer>
    </div>
    <!-- ./wrapper -->

    <!-- jQuery -->
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.6.0/dist/jquery.min.js"></script>
    <!-- Bootstrap 4 -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js"></script>
    <!-- AdminLTE App -->
    <script src="https://cdn.jsdelivr.net/npm/admin-lte@3.2/dist/js/adminlte.min.js"></script>
    <script>
        // Hàm format bytes
        function formatBytes(bytes, decimals = 2) {
            if (bytes === 0) return '0 Bytes';
            const k = 1024;
            const dm = decimals < 0 ? 0 : decimals;
            const sizes = ['Bytes', 'KB', 'MB', 'GB', 'TB'];
            const i = Math.floor(Math.log(bytes) / Math.log(k));
            return parseFloat((bytes / Math.pow(k, i)).toFixed(dm)) + ' ' + sizes[i];
        }

        // Hàm format date
        function formatDate(dateString) {
            const date = new Date(dateString);
            return date.toLocaleDateString('vi-VN', {
                year: 'numeric',
                month: '2-digit',
                day: '2-digit',
                hour: '2-digit',
                minute: '2-digit'
            });
        }

        // Đồng bộ files
        async function syncFiles() {
            try {
                const response = await fetch('/api/sync', {
                    method: 'POST'
                });

                if (!response.ok) throw new Error('Sync failed');

                window.location.reload();
            } catch (error) {
                console.error('Sync error:', error);
                alert('Lỗi khi đồng bộ: ' + error.message);
            }
        }

        // Dọn dẹp uploads
        async function cleanUploads() {
            if (!confirm('Bạn có chắc muốn tải tất cả file lên Telegram?')) return;

            try {
                const response = await fetch('/api/clean', {
                    method: 'POST'
                });

                if (!response.ok) throw new Error('Clean failed');

                window.location.reload();
            } catch (error) {
                console.error('Clean error:', error);
                alert('Lỗi khi dọn dẹp: ' + error.message);
            }
        }

        // Script cập nhật Telegram File ID
        document.addEventListener('DOMContentLoaded', function() {
            const btnUpdateFileId = document.getElementById('btnUpdateFileId');
            const updateResult = document.getElementById('updateResult');
            const fileId = '<%= file.id %>';
            
            btnUpdateFileId.addEventListener('click', async function() {
                const telegramFileId = document.getElementById('telegramFileId').value.trim();
                
                if (!telegramFileId) {
                    updateResult.innerHTML = '<div class="alert alert-danger">Vui lòng nhập Telegram File ID</div>';
                    return;
                }
                
                try {
                    updateResult.innerHTML = '<div class="alert alert-info">Đang xử lý...</div>';
                    
                    const response = await fetch(`/api/update-file/${fileId}`, {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json'
                        },
                        body: JSON.stringify({ telegramFileId })
                    });
                    
                    const data = await response.json();
                    
                    if (response.ok) {
                        updateResult.innerHTML = `<div class="alert alert-success">
                            <p>${data.message}</p>
                            <a href="/file/${fileId}" class="btn btn-sm btn-info">Tải lại trang</a>
                        </div>`;
                    } else {
                        updateResult.innerHTML = `<div class="alert alert-danger">
                            <p>${data.message || 'Lỗi cập nhật Telegram File ID'}</p>
                        </div>`;
                    }
                } catch (error) {
                    updateResult.innerHTML = `<div class="alert alert-danger">
                        <p>Lỗi: ${error.message}</p>
                    </div>`;
                }
            });
        });

        // Script xử lý chức năng sửa lỗi file
        document.addEventListener('DOMContentLoaded', function() {
            // Sự kiện nhấn nút sửa lỗi file
            document.getElementById('btnFixFile').addEventListener('click', async function(e) {
                e.preventDefault();
                const fixStatus = document.getElementById('fixStatus');
                const fileStatus = document.getElementById('fileStatus');
                const url = this.getAttribute('href');
                
                fixStatus.innerHTML = '<div class="alert alert-info">Đang sửa lỗi file...</div>';
                
                try {
                    const response = await fetch(url);
                    const data = await response.json();
                    
                    if (data.success) {
                        fixStatus.innerHTML = '<div class="alert alert-success">' + data.message + '</div>';
                        
                        // Cập nhật trạng thái file
                        fileStatus.innerHTML = '<span class="badge badge-success">Đã đồng bộ với Telegram</span>';
                        
                        // Thêm nút download lại
                        fixStatus.innerHTML += `
                            <a href="/api/files/<%= file.id %>/download" class="btn btn-primary mt-2">
                                <i class="fas fa-download"></i> Tải xuống ngay
                            </a>
                        `;
                    } else {
                        fixStatus.innerHTML = '<div class="alert alert-danger">' + (data.message || 'Lỗi không xác định') + '</div>';
                    }
                } catch (error) {
                    console.error('Lỗi sửa file:', error);
                    fixStatus.innerHTML = '<div class="alert alert-danger">Lỗi kết nối đến server</div>';
                }
                
                return false;
            });
        });
    </script>
</body>
</html> 