<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= file.originalFileName || file.fileName %> - TeleDrive</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
    <style>
        .file-preview {
            max-width: 100%;
            max-height: 400px;
            margin: 0 auto;
            display: block;
        }
        .file-icon {
            font-size: 6rem;
            margin-bottom: 20px;
        }
        .document-icon { color: #4285F4; }
        .photo-icon { color: #34A853; }
        .video-icon { color: #EA4335; }
        .audio-icon { color: #FBBC05; }
        .file-error { color: #EA4335; }
        .file-unavailable {
            display: none;
            text-align: center;
            padding: 20px;
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div class="container">
            <a class="navbar-brand" href="/">
                <i class="bi bi-telegram me-2"></i>TeleDrive
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a class="nav-link active" href="/">Files</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/bot-settings">Bot Settings</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container py-5">
        <div class="mb-4">
            <a href="/" class="text-decoration-none">
                <i class="bi bi-arrow-left"></i> Back to All Files
            </a>
        </div>

        <div class="alert alert-danger file-unavailable" id="fileUnavailableAlert">
            <h4 class="alert-heading"><i class="bi bi-exclamation-triangle-fill me-2"></i> File Unavailable</h4>
            <p>This file is no longer available on the server. It may have been deleted or moved.</p>
            <hr>
            <p class="mb-0">You can try refreshing the page or going back to the file list.</p>
        </div>

        <div class="row">
            <div class="col-md-6 mb-4">
                <div class="card h-100">
                    <div class="card-body text-center py-5" id="filePreviewContainer">
                        <% if (file.fileType === 'photo') { %>
                            <img src="<%= file.filePath %>" alt="<%= file.originalFileName || file.fileName %>" class="file-preview mb-3" id="photoPreview"
                                 onerror="handleFileError()">
                        <% } else if (file.fileType === 'video') { %>
                            <video controls class="file-preview mb-3" id="videoPreview" onerror="handleFileError()">
                                <source src="<%= file.filePath %>" type="video/mp4">
                                Your browser does not support the video tag.
                            </video>
                        <% } else if (file.fileType === 'audio') { %>
                            <audio controls class="mb-3 w-100" id="audioPreview" onerror="handleFileError()">
                                <source src="<%= file.filePath %>" type="audio/mpeg">
                                Your browser does not support the audio tag.
                            </audio>
                            <i class="bi bi-music-note-beamed file-icon audio-icon"></i>
                        <% } else if (file.fileType === 'document') { %>
                            <i class="bi bi-file-earmark-text file-icon document-icon"></i>
                        <% } else { %>
                            <i class="bi bi-file-earmark file-icon"></i>
                        <% } %>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header bg-primary text-white">
                        <h5 class="mb-0">File Details</h5>
                    </div>
                    <div class="card-body">
                        <h3 class="mb-3"><%= file.originalFileName || file.fileName %></h3>
                        
                        <table class="table">
                            <tbody>
                                <tr>
                                    <th scope="row">File Type</th>
                                    <td>
                                        <span class="badge bg-secondary">
                                            <%= file.fileType ? file.fileType.charAt(0).toUpperCase() + file.fileType.slice(1) : 'Unknown' %>
                                        </span>
                                    </td>
                                </tr>
                                <% if (file.fileSize) { %>
                                <tr>
                                    <th scope="row">Size</th>
                                    <td><%= (file.fileSize / 1024).toFixed(2) %> KB</td>
                                </tr>
                                <% } %>
                                <tr>
                                    <th scope="row">Uploaded</th>
                                    <td><%= new Date(file.uploadDate).toLocaleString() %></td>
                                </tr>
                                <% if (file.uploadedBy && file.uploadedBy.username) { %>
                                <tr>
                                    <th scope="row">Uploaded By</th>
                                    <td>
                                        <% if (file.uploadedBy.firstName || file.uploadedBy.lastName) { %>
                                            <%= file.uploadedBy.firstName %> <%= file.uploadedBy.lastName %>
                                            <small class="text-muted">(@<%= file.uploadedBy.username %>)</small>
                                        <% } else { %>
                                            @<%= file.uploadedBy.username %>
                                        <% } %>
                                    </td>
                                </tr>
                                <% } %>
                                <tr>
                                    <th scope="row">File ID</th>
                                    <td><small class="text-muted"><%= file.fileId %></small></td>
                                </tr>
                                <tr>
                                    <th scope="row">Status</th>
                                    <td id="fileStatus">
                                        <div class="spinner-border spinner-border-sm text-primary" role="status">
                                            <span class="visually-hidden">Loading...</span>
                                        </div>
                                        <span class="ms-2">Checking...</span>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                        
                        <div class="d-grid gap-2 mt-4">
                            <a href="<%= file.filePath %>" class="btn btn-primary" id="downloadButton" download="<%= file.originalFileName || file.fileName %>">
                                <i class="bi bi-download"></i> Download File
                            </a>
                            <button class="btn btn-danger" id="deleteFile" data-id="<%= file._id %>" data-name="<%= file.originalFileName || file.fileName %>">
                                <i class="bi bi-trash"></i> Delete File
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="card mb-4">
            <div class="card-header">
                <h5 class="mb-0">Xem trước File</h5>
            </div>
            <div class="card-body text-center">
                <% if (file.previewAvailable) { %>
                    <% if (file.directLink && file.fileLink) { %>
                        <img src="<%= file.fileLink %>" class="img-fluid mb-3" alt="<%= file.originalFileName %>" 
                             style="max-height: 400px;"
                             onerror="this.onerror=null;this.src='';this.alt='Không thể tải ảnh xem trước';this.classList.add('d-none');document.getElementById('preview-error').classList.remove('d-none');">
                    <% } else { %>
                        <img src="<%= file.filePath %>" class="img-fluid mb-3" alt="<%= file.originalFileName %>" 
                             style="max-height: 400px;"
                             onerror="this.onerror=null;this.src='';this.alt='Không thể tải ảnh xem trước';this.classList.add('d-none');document.getElementById('preview-error').classList.remove('d-none');">
                    <% } %>
                    <div id="preview-error" class="alert alert-warning d-none">
                        <i class="bi bi-exclamation-triangle"></i> Không thể tải ảnh xem trước
                    </div>
                <% } else if (file.fileType === 'video') { %>
                    <% if (file.directLink && file.fileLink) { %>
                        <div class="ratio ratio-16x9" style="max-width: 640px; margin: 0 auto;">
                            <video controls>
                                <source src="<%= file.fileLink %>" type="video/mp4">
                                Your browser does not support the video tag.
                            </video>
                        </div>
                    <% } else { %>
                        <div class="ratio ratio-16x9" style="max-width: 640px; margin: 0 auto;">
                            <video controls>
                                <source src="<%= file.filePath %>" type="video/mp4">
                                Your browser does not support the video tag.
                            </video>
                        </div>
                    <% } %>
                <% } else if (file.fileType === 'audio') { %>
                    <% if (file.directLink && file.fileLink) { %>
                        <audio controls style="width: 100%; max-width: 500px;">
                            <source src="<%= file.fileLink %>" type="audio/mpeg">
                            Your browser does not support the audio element.
                        </audio>
                    <% } else { %>
                        <audio controls style="width: 100%; max-width: 500px;">
                            <source src="<%= file.filePath %>" type="audio/mpeg">
                            Your browser does not support the audio element.
                        </audio>
                    <% } %>
                <% } else { %>
                    <div class="py-5">
                        <i class="bi bi-file-earmark text-primary" style="font-size: 4rem;"></i>
                        <p class="mt-3">Không có xem trước cho loại file này</p>
                    </div>
                <% } %>
            </div>
            <div class="card-footer text-center">
                <% if (file.directLink && file.fileLink) { %>
                    <a href="/download/<%= file._id %>" class="btn btn-primary">
                        <i class="bi bi-download"></i> Tải xuống
                    </a>
                <% } else { %>
                    <a href="<%= file.filePath %>" class="btn btn-primary" download="<%= file.originalFileName %>">
                        <i class="bi bi-download"></i> Tải xuống
                    </a>
                <% } %>
            </div>
        </div>

        <div class="card">
            <div class="card-header">
                <ul class="nav nav-tabs card-header-tabs" id="fileTabs" role="tablist">
                    <li class="nav-item">
                        <a class="nav-link active" id="details-tab" data-toggle="tab" href="#details" role="tab" aria-controls="details" aria-selected="true">
                            <i class="fas fa-info-circle"></i> Thông tin
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" id="share-tab" data-toggle="tab" href="#share" role="tab" aria-controls="share" aria-selected="false">
                            <i class="fas fa-share-alt"></i> Chia sẻ
                        </a>
                    </li>
                </ul>
            </div>
            <div class="card-body">
                <div class="tab-content" id="fileTabsContent">
                    <div class="tab-pane fade show active" id="details" role="tabpanel" aria-labelledby="details-tab">
                        <div class="row">
                            <div class="col-md-6">
                                <h5>Thông tin file</h5>
                                <table class="table table-sm">
                                    <tr>
                                        <th>Tên file:</th>
                                        <td><%= file.name %></td>
                                    </tr>
                                    <tr>
                                        <th>Kích thước:</th>
                                        <td><%= file.formattedSize %></td>
                                    </tr>
                                    <tr>
                                        <th>Ngày tải lên:</th>
                                        <td><%= file.formattedDate %></td>
                                    </tr>
                                    <tr>
                                        <th>Loại file:</th>
                                        <td><%= file.fileType %></td>
                                    </tr>
                                    <tr>
                                        <th>Trạng thái:</th>
                                        <td>
                                            <% if (file.telegramStatus === 'real') { %>
                                                <span class="badge badge-success">Đã đồng bộ với Telegram</span>
                                            <% } else { %>
                                                <span class="badge badge-warning">Chưa đồng bộ</span>
                                            <% } %>
                                        </td>
                                    </tr>
                                </table>
                            </div>
                            <div class="col-md-6 text-center">
                                <div class="file-preview-container my-3">
                                    <% if (file.fileType === 'image') { %>
                                        <img src="/api/files/<%= file.id %>/preview" class="img-fluid" alt="<%= file.name %>">
                                    <% } else if (file.fileType === 'video') { %>
                                        <video controls class="w-100">
                                            <source src="/api/files/<%= file.id %>/preview" type="<%= file.mimeType %>">
                                            Trình duyệt của bạn không hỗ trợ video.
                                        </video>
                                    <% } else if (file.fileType === 'audio') { %>
                                        <audio controls class="w-100">
                                            <source src="/api/files/<%= file.id %>/preview" type="<%= file.mimeType %>">
                                            Trình duyệt của bạn không hỗ trợ audio.
                                        </audio>
                                    <% } else if (file.fileType === 'pdf') { %>
                                        <iframe src="/api/files/<%= file.id %>/preview" width="100%" height="400" frameborder="0"></iframe>
                                    <% } else { %>
                                        <div class="file-icon-large">
                                            <i class="fas fa-file fa-5x text-secondary"></i>
                                            <p class="mt-3">Không thể xem trước file này</p>
                                        </div>
                                    <% } %>
                                </div>
                                <div class="btn-group mt-3">
                                    <a href="<%= file.downloadUrl %>" class="btn btn-primary">
                                        <i class="fas fa-download"></i> Tải xuống
                                    </a>
                                    <a href="/api/files/<%= file.id %>/fix" class="btn btn-warning">
                                        <i class="fas fa-sync"></i> Sửa lỗi file
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="tab-pane fade" id="share" role="tabpanel" aria-labelledby="share-tab">
                        <h5>Thiết lập chia sẻ</h5>
                        <form id="shareForm">
                            <div class="form-group">
                                <div class="custom-control custom-switch">
                                    <input type="checkbox" class="custom-control-input" id="isPublic" checked>
                                    <label class="custom-control-label" for="isPublic">Công khai file</label>
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="expiryDate">Ngày hết hạn (tùy chọn)</label>
                                <input type="date" class="form-control" id="expiryDate">
                            </div>
                            <button type="button" class="btn btn-primary" id="saveShareSettings">
                                <i class="fas fa-save"></i> Lưu thiết lập
                            </button>
                        </form>

                        <div id="shareResult" class="mt-4" style="display:none;">
                            <h5>Link chia sẻ</h5>
                            <div class="input-group">
                                <input type="text" class="form-control" id="shareLink" readonly>
                                <div class="input-group-append">
                                    <button class="btn btn-outline-secondary" type="button" id="copyButton">
                                        <i class="fas fa-copy"></i> Sao chép
                                    </button>
                                </div>
                            </div>
                            <div class="mt-3">
                                <button class="btn btn-sm btn-outline-secondary" id="qrCodeButton">
                                    <i class="fas fa-qrcode"></i> Tạo mã QR
                                </button>
                                <div id="qrCodeContainer" class="text-center mt-3" style="display:none;"></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Delete Confirmation Modal -->
    <div class="modal fade" id="deleteModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Confirm Delete</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    Are you sure you want to delete <span id="fileName"></span>?
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="button" class="btn btn-danger" id="confirmDelete">Delete</button>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Handle file loading errors
        function handleFileError() {
            document.getElementById('fileUnavailableAlert').style.display = 'block';
            document.getElementById('filePreviewContainer').innerHTML = `
                <div class="text-center p-5">
                    <i class="bi bi-exclamation-triangle-fill file-icon file-error"></i>
                    <h4 class="mt-3">File Preview Unavailable</h4>
                    <p class="text-muted">The file could not be loaded from the server.</p>
                </div>
            `;
            
            const statusElement = document.getElementById('fileStatus');
            statusElement.innerHTML = `
                <span class="badge bg-danger">
                    <i class="bi bi-exclamation-triangle-fill me-1"></i> Unavailable
                </span>
            `;
            
            // Disable download button
            const downloadButton = document.getElementById('downloadButton');
            downloadButton.classList.add('disabled');
            downloadButton.setAttribute('aria-disabled', 'true');
            downloadButton.addEventListener('click', (e) => {
                e.preventDefault();
                alert('This file is not available for download. It may have been deleted or moved.');
            });
        }
        
        document.addEventListener('DOMContentLoaded', async () => {
            // Check if file exists
            const fileId = '<%= file._id %>';
            const statusElement = document.getElementById('fileStatus');
            const downloadButton = document.getElementById('downloadButton');
            
            try {
                const response = await fetch(`/api/check-file/${fileId}`);
                const data = await response.json();
                
                if (data.exists) {
                    statusElement.innerHTML = `
                        <span class="badge bg-success">
                            <i class="bi bi-check-circle-fill me-1"></i> Available
                        </span>
                    `;
                } else {
                    handleFileError();
                }
            } catch (error) {
                console.error('Error checking file:', error);
                statusElement.innerHTML = `
                    <span class="badge bg-warning">
                        <i class="bi bi-question-circle-fill me-1"></i> Unknown
                    </span>
                `;
            }
            
            // Set up delete file functionality
            const deleteModal = new bootstrap.Modal(document.getElementById('deleteModal'));
            let fileToDelete = null;

            document.getElementById('deleteFile').addEventListener('click', () => {
                const fileId = document.getElementById('deleteFile').getAttribute('data-id');
                const fileName = document.getElementById('deleteFile').getAttribute('data-name');
                fileToDelete = fileId;
                document.getElementById('fileName').textContent = fileName;
                deleteModal.show();
            });

            document.getElementById('confirmDelete').addEventListener('click', async () => {
                if (!fileToDelete) return;
                
                try {
                    const response = await fetch(`/files/${fileToDelete}`, {
                        method: 'DELETE'
                    });
                    
                    if (response.ok) {
                        deleteModal.hide();
                        // Redirect to home page
                        window.location.href = '/';
                    } else {
                        alert('Failed to delete file. Please try again.');
                    }
                } catch (error) {
                    console.error('Error deleting file:', error);
                    alert('An error occurred while deleting the file.');
                }
            });
        });

        document.addEventListener('DOMContentLoaded', function() {
            // Sự kiện lưu thiết lập chia sẻ
            document.getElementById('saveShareSettings').addEventListener('click', async function() {
                const isPublic = document.getElementById('isPublic').checked;
                const expiryDate = document.getElementById('expiryDate').value;
                
                try {
                    const response = await fetch('/api/files/<%= file.id %>/share', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json'
                        },
                        body: JSON.stringify({
                            isPublic,
                            expiryDate: expiryDate || null
                        })
                    });
                    
                    const data = await response.json();
                    
                    if (data.success) {
                        const shareResult = document.getElementById('shareResult');
                        const shareLink = document.getElementById('shareLink');
                        
                        shareResult.style.display = 'block';
                        shareLink.value = window.location.origin + data.shareInfo.shareUrl;
                        
                        // Hiển thị thông báo thành công
                        alert('Đã cập nhật thiết lập chia sẻ!');
                    } else {
                        console.error('Lỗi chia sẻ file:', data.message);
                        alert('Lỗi: ' + data.message);
                    }
                } catch (error) {
                    console.error('Lỗi gọi API chia sẻ:', error);
                    alert('Lỗi kết nối đến server');
                }
            });
            
            // Sự kiện sao chép link
            document.getElementById('copyButton').addEventListener('click', function() {
                const shareLink = document.getElementById('shareLink');
                shareLink.select();
                document.execCommand('copy');
                alert('Đã sao chép link chia sẻ!');
            });
            
            // Sự kiện tạo mã QR
            document.getElementById('qrCodeButton').addEventListener('click', function() {
                const qrCodeContainer = document.getElementById('qrCodeContainer');
                const shareLink = document.getElementById('shareLink').value;
                
                if (shareLink) {
                    qrCodeContainer.style.display = 'block';
                    qrCodeContainer.innerHTML = '';
                    
                    // Tạo QR code (cần thêm thư viện qrcode.js)
                    if (typeof QRCode !== 'undefined') {
                        new QRCode(qrCodeContainer, {
                            text: shareLink,
                            width: 200,
                            height: 200
                        });
                    } else {
                        qrCodeContainer.innerHTML = `
                            <div class="alert alert-warning">
                                Không thể tạo mã QR. Thư viện QRCode chưa được tải.
                            </div>
                        `;
                    }
                }
            });
        });
    </script>

    <footer class="bg-light py-3 mt-5">
        <div class="container text-center">
            <p class="mb-0 text-muted">TeleDrive &copy; <%= new Date().getFullYear() %> | <a href="https://github.com/yourusername/teledrive" target="_blank" class="text-decoration-none">GitHub</a></p>
        </div>
    </footer>
</body>
</html> 