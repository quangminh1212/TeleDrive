<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>TeleDrive</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div class="container">
            <a class="navbar-brand" href="/"><i class="bi bi-telegram me-2"></i>TeleDrive</a>
            <ul class="navbar-nav">
                <li class="nav-item"><a class="nav-link active" href="/">Files</a></li>
                <li class="nav-item"><a class="nav-link" href="/bot-settings">Bot Settings</a></li>
            </ul>
        </div>
    </nav>

    <div class="container py-4">
        <h1>Your Telegram Files</h1>
        <p class="text-muted mb-4">Manage files sent to your Telegram bot</p>
        
        <div id="loading" class="text-center py-4">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
            <p class="mt-2">Loading files...</p>
        </div>
        
        <div id="file-list" class="row row-cols-1 row-cols-md-3 g-4"></div>
        
        <div id="no-files" class="alert alert-info d-none">
            <i class="bi bi-info-circle me-2"></i>
            No files have been uploaded yet. Send a file to your Telegram bot to get started.
        </div>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            loadFiles();
            
            // Auto refresh every 10 seconds
            setInterval(loadFiles, 10000);
            
            async function loadFiles() {
                const loading = document.getElementById('loading');
                const fileList = document.getElementById('file-list');
                const noFiles = document.getElementById('no-files');
                
                loading.style.display = 'block';
                
                try {
                    // Đây là trực tiếp với dữ liệu từ filesDb trong index.js
                    const response = await fetch('/api/raw-files');
                    const data = await response.json();
                    
                    if (data.files && data.files.length > 0) {
                        fileList.innerHTML = '';
                        noFiles.classList.add('d-none');
                        
                        data.files.forEach(file => {
                            const col = document.createElement('div');
                            col.className = 'col';
                            
                            let fileIcon = '';
                            if (file.fileType === 'document') {
                                fileIcon = '<i class="bi bi-file-earmark-text text-primary" style="font-size: 3rem;"></i>';
                            } else if (file.fileType === 'photo') {
                                fileIcon = '<i class="bi bi-file-image text-success" style="font-size: 3rem;"></i>';
                            } else if (file.fileType === 'video') {
                                fileIcon = '<i class="bi bi-file-play text-danger" style="font-size: 3rem;"></i>';
                            } else if (file.fileType === 'audio') {
                                fileIcon = '<i class="bi bi-file-music text-warning" style="font-size: 3rem;"></i>';
                            } else {
                                fileIcon = '<i class="bi bi-file-earmark text-secondary" style="font-size: 3rem;"></i>';
                            }
                            
                            col.innerHTML = `
                                <div class="card h-100">
                                    <div class="card-body text-center">
                                        <div class="mb-3">${fileIcon}</div>
                                        <h5 class="card-title text-truncate">${file.originalFileName || file.fileName}</h5>
                                        <p class="card-text">
                                            <small class="text-muted">
                                                ${file.fileSize ? Math.round(file.fileSize / 1024) + ' KB' : ''}
                                                <br>
                                                ${new Date(file.uploadDate).toLocaleString()}
                                            </small>
                                        </p>
                                        <div class="d-flex justify-content-center">
                                            <a href="${file.filePath}" class="btn btn-sm btn-primary me-2" download>
                                                <i class="bi bi-download"></i> Download
                                            </a>
                                            <a href="/files/${file._id}" class="btn btn-sm btn-secondary me-2">
                                                <i class="bi bi-info-circle"></i> Details
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            `;
                            
                            fileList.appendChild(col);
                        });
                    } else {
                        fileList.innerHTML = '';
                        noFiles.classList.remove('d-none');
                    }
                } catch (error) {
                    console.error('Error loading files:', error);
                    fileList.innerHTML = `
                        <div class="col-12">
                            <div class="alert alert-danger">
                                <i class="bi bi-exclamation-triangle me-2"></i>
                                Error loading files: ${error.message}
                            </div>
                        </div>
                    `;
                } finally {
                    loading.style.display = 'none';
                }
            }
        });
    </script>
</body>
</html> 